<page id="middle" bg_image="tech-bg-lab.png" on_load="hideAgent('mensagem'); hideAgent('botaoContinuar')">

  <!-- Texto de instrução -->
  <agent
    id="começo_da_procura"
    text="Clique em lugares onde o Garfield pode estar"
    color="white"
    x="center"
    y="160"
    font-size="17"
  />

  <!-- Opção: Guarda-roupa -->
  <agent
    id="guarda"
    text="Guarda-roupa"
    x="center"
    y="220"
    font-size="25"
    color="white"
    on_click="hideAgent('mensagem'); hideAgent('botaoContinuar')"
  />

  <!-- Opção: Gavetas -->
  <agent
    id="gavetas"
    text="Gavetas"
    x="center"
    y="280"
    font-size="25"
    color="white"
    on_click="hideAgent('mensagem'); hideAgent('botaoContinuar')"
  />

  <!-- Opção correta: Debaixo da cama -->
  <agent
    id="cama"
    text="Debaixo da cama"
    x="center"
    y="340"
    font-size="25"
    color="white"
    on_click="showAgent('mensagem'); showAgent('botaoContinuar')"
  />

  <!-- Mensagem (inicialmente escondida) -->
  <agent
    id="mensagem"
    text="Você encontrou o Garfield!"
    x="center"
    y="400"
    font-size="22"
    color="lightgreen"
  />

  <!-- Botão de continuar (inicialmente escondido) -->
  <agent
    id="botaoContinuar"
    text="Ir para o quarto"
    x="center"
    y="460"
    font-size="30"
    color="yellow"
    on_click="goToPage('ending')"
  />

</page>