<page id="middle" bg_image="tech-bg-lab.png">

  <!-- Texto fixo no topo -->
  <agent
    id="começo_da_procura"
    text="Clique em lugares onde o Garfield pode estar"
    color="white"
    x="center"
    y="160"
    font-size="17"
  />

  <!-- Guarda-roupa -->
  <agent
    id="guarda"
    text="Guarda-roupa"
    x="center"
    y="220"
    font-size="25"
    color="white"
    on_click="moveAgent('mensagem', -1000, -1000); moveAgent('botaoContinuar', -1000, -1000)"
  />

  <!-- Gavetas -->
  <agent
    id="gavetas"
    text="Gavetas"
    x="center"
    y="280"
    font-size="25"
    color="white"
    on_click="moveAgent('mensagem', -1000, -1000); moveAgent('botaoContinuar', -1000, -1000)"
  />

  <!-- Debaixo da cama (resposta certa) -->
  <agent
    id="cama"
    text="Debaixo da cama"
    x="center"
    y="340"
    font-size="25"
    color="white"
    on_click="moveAgent('mensagem', 320, 400); moveAgent('botaoContinuar', 320, 460)"
  />

  <!-- Mensagem: inicialmente fora da tela -->
  <agent
    id="mensagem"
    text="Você encontrou o Garfield!"
    x="-1000"
    y="-1000"
    font-size="22"
    color="lightgreen"
  />

  <!-- Botão para continuar: inicialmente fora da tela -->
  <agent
    id="botaoContinuar"
    text="Ir para o quarto"
    x="-1000"
    y="-1000"
    font-size="30"
    color="yellow"
    on_click="goToPage('room')"
  />

</page>