<page id="middle" bg_image="tech-bg-lab.png">
  <agent
    id="começo_da_procura"
    text=" Clique em lugares onde o Garfield pode estar"
    color="white"
    x="center"
    y="160"
    font-size="17"
    />
  <agent
    id="click_quardaroupa"
    text="Guarda-roupa"
    x="center"
    y="200"
    font-size="30"
    color="white"
    on_click="showMsg('Você olhou no guarda-roupa, mas não está lá!')" />
  <agent
    id="click_drawers"
    text="Gavetas"
    x="center"
    y="280"
    font-size="30"
    color="white"
    on_click="showMsg('Você remexeu nas gavetas... nada do Garfield.')" />
<agent
    id="click_embaixo_da_cama"
    text="Debaixo da cama"
    x="center"
    y="360"
    font-size="30"
    color="white"
    on_click="showMsg('Você encontrou o Garfield debaixo da cama!'); showAgent('next_page_text')" />

  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
    on_click="goToPage('ending')"
  />
</page>