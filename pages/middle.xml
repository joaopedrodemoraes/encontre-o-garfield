<page id="middle" bg_image="tech-bg-lab.png">
  <agent
    id="começo_da_procura"
    text=" Clique em lugares onde o Garfield pode estar"
    color="white"
    x="center"
    y="160"
    font-size="17"
    />
  <agent
    id="guarda"
    text="Guarda-roupa"
    x="center"
    y="220"
    font-size="25"
    color="white"
    on_click="hideAgent('mensagem');"
  />
<agent
    id="gavetas"
    text="Gavetas"
    x="center"
    y="280"
    font-size="25"
    color="white"
    on_click="hideAgent('mensagem');"
  />
<agent
    id="cama"
    text="Debaixo da cama"
    x="center"
    y="340"
    font-size="25"
    color="white"
    on_click="showAgent('mensagem'); showAgent('botaoContinuar')" />
  <agent
    id="mensagem"
    text="Você encontrou o Garfield!"
    x="center"
    y="400"
    font-size="22"
    color="lightgreen"
    visible="false"
  />

  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
    on_click="goToPage('ending')"
  />
</page>